      function check() {
        if(form.id.value == "") {
          alert("ID를 입력해 주세요.");
          form.id.focus();
          return false;
        } else if(form.password.value == "") {
          alert("비밀번호를 입력해 주세요.");
          form.password.focus();
          return false;
        } else if(form.name.value == "") {
          alert("name을 입력해 주세요.");
          form.name.focus();
          return false;
        } else if(form.mail.value == "") {
          alert("메일을 입력해 주세요.");
          form.mail.focus();
          return false;
        } else return true;
      }

