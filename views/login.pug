extends layout

block header
  title
    | Passport |&nbsp;로그인
  script.
    function check() {
      if(form.id.value == "") {
        alert("ID를 입력해 주세요.");
        form.id.focus();
        return false;
      } else if(form.password.value == "") {
        alert("비밀번호를 입력해 주세요.");
        form.password.focus();
        return false;
      } else return true;
    }

block page
  - var menu = 'login'

block content
  .col-md-4.col-md-offset-4
    h2 로그인
    div= error
    div
      form(action="/login", method="POST" name="form" onsubmit="return check()")
        p
          input.form-control(name="id", type="text", placeholder="아이디")
        p
          input.form-control(name="password", type="password", placeholder="********")
        p
          input.btn.btn-lg.btn-primary.btn-block(type="submit" value="로그인")
      a.btn.btn-lg.btn-primary.btn-block(href="/signup") 회원가입