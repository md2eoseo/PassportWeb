extends layout

block page
  - var menu = 'login'

block content
  .col-md-4.col-md-offset-4
    h2 Login
    div= error
    div
      form(action="/login", method="POST" name="form" onsubmit="return check()")
        p
          input.form-control(name="id", type="text", placeholder="ID")
        p
          input.form-control(name="password", type="password", placeholder="********")
        p
          input.btn.btn-lg.btn-primary.btn-block(type="submit" value="Login")
      a.btn.btn-lg.btn-primary.btn-block(href="/signup") Sign Up