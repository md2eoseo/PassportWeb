extends layout

block header
  title
    | Passport |&nbsp;회원가입
  script(type="text/javascript").
    function check() {
      if(form.id.value == "") {
        alert("아이디를 입력해 주세요.");
        form.id.focus();
        return false;
      } else if(form.password.value == "") {
        alert("비밀번호를 입력해 주세요.");
        form.password.focus();
        return false;
      } else if(form.name.value == "") {
        alert("이름을 입력해 주세요.");
        form.name.focus();
        return false;
      } else if(form.mail.value == "") {
        alert("메일을 입력해 주세요.");
        form.mail.focus();
        return false;
      } else return true;
    }

block page
  - var menu = 'signup'

block content
  .col-md-4.col-md-offset-4
    h2 회원가입
    div= error
    div
      form(action="/signup", method="POST", name="form", onsubmit="return check();")
        p
          input.form-control(name="id", type="text", placeholder="아이디")
        p
          input.form-control(name="password", type="password", placeholder="********")
        p
          input.form-control(id="name", name="name", type="text", placeholder="이름")
        p
          input.form-control(name="mail", type="text", placeholder="example@mail.com")
        p
          input.btn.btn-lg.btn-primary.btn-block(type="submit", value="회원가입")