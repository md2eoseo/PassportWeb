extends layout

block header
  title
    | Passport |&nbsp;회원가입

block page
  - var menu = 'signup'

block content
  .col-md-4.col-md-offset-4
    h2 회원가입
    div= error
    div
      form(action="/signup", method="POST" name="form" onsubmit="return check()")
        p
          input.form-control(name="id", type="text", placeholder="아이디")
        p
          input.form-control(name="password", type="password", placeholder="********")
        p
          input.form-control(name="name", type="text", placeholder="이름")
        p
          input.form-control(name="mail", type="text", placeholder="example@mail.com")
        p
          input.btn.btn-lg.btn-primary.btn-block(type="submit" value="회원가입")