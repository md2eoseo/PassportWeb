extends layout

block page
  - var menu = 'login'

block content
  .col-md-4.col-md-offset-4
    h2 Sign Up
    div= error
    div
      form(action="/signup", method="POST" name="form" onsubmit="return check()")
        p
          input.form-control(name="id", type="text", placeholder="ID")
        p
          input.form-control(name="password", type="password", placeholder="********")
        p
          input.form-control(name="name", type="text", placeholder="Name")
        p
          input.form-control(name="mail", type="text", placeholder="example@mail.com")
        p
          input.btn.btn-lg.btn-primary.btn-block(type="submit" value="Sign Up")